.type Dict <: symbol

.input particle(IO=file)
.decl particle(token: symbol)

.input pronoun(IO=file)
.decl pronoun(token: symbol)

.decl noun(token: symbol, meaning: symbol)
.input noun(IO=file, delimiter=",")

.decl verb(lemma: symbol, type: symbol, meaning: symbol, ending: symbol, transivity: symbol)
.input verb(IO=file, delimiter=",")

.decl verb_conj(lemma: symbol, masu: symbol)
.input verb_conj(IO=file, delimiter=",")

.decl dict(d: Dict)
dict(as(token, Dict)) :-
  (pronoun(token); particle(token); noun(token, _); verb_conj(_, token); verb_te(_, token)).
